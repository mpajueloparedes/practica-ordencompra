@model OrdenCompra.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <div class="error-container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-danger">
                    <div class="card-body text-center p-5">
                        <i class="fas fa-exclamation-triangle fa-4x text-danger mb-4"></i>

                        <h1 class="display-4 text-danger">¡Oops!</h1>
                        <h2 class="mb-4">Ha ocurrido un error</h2>

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                <strong>Error:</strong> @Model.ErrorMessage
                            </div>
                        }

                        @if (Model.ShowRequestId)
                        {
                            <p class="text-muted">
                                <small>
                                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                                </small>
                            </p>
                        }

                        <div class="mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                                <i class="fas fa-home me-2"></i>Ir al Inicio
                            </a>
                            <button onclick="history.back()" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-container {
        min-height: 60vh;
        display: flex;
        align-items: center;
    }
</style>