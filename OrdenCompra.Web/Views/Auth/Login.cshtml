@model OrdenCompra.Web.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-user-circle fa-3x text-white"></i>
                    </div>
                    <h3 class="card-title text-dark fw-bold">Iniciar Sesión</h3>
                    <p class="text-muted">Ingresa tus credenciales para continuar</p>
                </div>

                <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="NombreUsuario" class="form-label text-dark fw-bold">
                            <i class="fas fa-user me-2 text-primary"></i>@Html.DisplayNameFor(m => m.NombreUsuario)
                        </label>
                        <input asp-for="NombreUsuario" class="form-control form-control-lg" placeholder="Ingresa tu nombre de usuario" />
                        <span asp-validation-for="NombreUsuario" class="text-danger fw-bold"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label text-dark fw-bold">
                            <i class="fas fa-lock me-2 text-primary"></i>@Html.DisplayNameFor(m => m.Password)
                        </label>
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Ingresa tu contraseña" />
                        <span asp-validation-for="Password" class="text-danger fw-bold"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label text-dark">
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg fw-bold">
                            <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                        </button>
                    </div>
                </form>

                <div class="mt-4 p-3 rounded" style="background-color: #f8f9fa; border-left: 4px solid #0d6efd;">
                    <h6 class="text-dark mb-2 fw-bold">
                        <i class="fas fa-info-circle me-2 text-primary"></i>Usuarios de prueba:
                    </h6>
                    <div class="small">
                        <div class="mb-2">
                            <strong class="text-dark">Administrador:</strong>
                            <code class="bg-white px-2 py-1 rounded text-dark">admin</code> /
                            <code class="bg-white px-2 py-1 rounded text-dark">admin123</code>
                        </div>
                        <div>
                            <strong class="text-dark">Usuario:</strong>
                            <code class="bg-white px-2 py-1 rounded text-dark">usuario1</code> /
                            <code class="bg-white px-2 py-1 rounded text-dark">usuario123</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}